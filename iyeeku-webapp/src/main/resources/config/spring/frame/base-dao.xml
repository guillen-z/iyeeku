<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource"></property>
		<property name="mapperLocations">
			<value>
				classpath*:/config/mybatis/app/*.xml
			</value>
		</property>
		<property name="configLocation">
			<value>
				classpath:/config/mybatis/frame/base-config.xml
			</value>
		</property>
		<!-- 拦截器可以配置到这里，同样可以配置到config文件中 -->
		<!-- 
		<property name="plugins">
			<array>
				<bean class="com.yq.yee.core.orm.interceptor.PaginationInterceptor"> 
				</bean>
			</array>
		</property>
		-->
	</bean>

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource"></property>
	</bean>

<!--	<bean id="baseDao" class="com.iyeeku.core.orm.impl.BaseDaoImpl">
		<property name="sqlSessionFactory" ref="sqlSessionFactory"></property>
		<property name="jdbcTemplate" ref="jdbcTemplate"></property>
	</bean>-->

</beans>